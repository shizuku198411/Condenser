    "definitions": {
        "container.CreateContainerRequest": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "/bin/sh",
                        "-c",
                        "echo hello; sleep 60"
                    ]
                },
                "image": {
                    "type": "string",
                    "example": "alpine:latest"
                },
                "mount": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "/host/dir:/container/dir",
                        "/src:/dst"
                    ]
                },
                "network": {
                    "type": "string",
                    "example": "raind0"
                },
                "port": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "8080:80",
                        "4443:443"
                    ]
                },
                "tty": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
        "container.ExecContainerRequest": {
            "type": "object",
            "properties": {
                "command": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "/bin/sh",
                        "-c",
                        "echo hello"
                    ]
                },
                "tty": {
                    "type": "boolean",
                    "example": true
                }
            }
        },
        "container.StartContainerRequest": {
            "type": "object",
            "properties": {
                "tty": {
                    "type": "boolean",
                    "example": false
                }
            }
        },
